<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="@dimen/layout_margin_bottom">

    <TextView
        android:id="@+id/tvExpenseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/expense_name"
        android:textSize="@dimen/text_size_expense_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_amount"
        android:textSize="@dimen/text_size_amount"
        android:layout_marginTop="@dimen/layout_margin_top" />

    <TextView
        android:id="@+id/tvSplitAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/split_amount"
        android:textSize="@dimen/text_size_amount"
        android:layout_marginTop="@dimen/layout_margin_top_split" />
</LinearLayout>
