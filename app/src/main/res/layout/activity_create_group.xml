<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/scroll_view_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/linear_layout_padding">

            <!-- Group Name -->
            <EditText
                android:id="@+id/etGroupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_group_name"
                android:inputType="text"
                android:padding="@dimen/edit_text_padding"
                android:minHeight="@dimen/min_touch_target" />

            <!-- Member Name -->
            <EditText
                android:id="@+id/etMemberName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/min_touch_target"
                android:hint="@string/hint_member_name"
                android:inputType="text"
                android:padding="@dimen/edit_text_padding"
                android:layout_marginTop="@dimen/margin_top_medium" />

            <!-- Add Member Button -->
            <Button
                android:id="@+id/btnAddMember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_add_member"
                android:layout_marginTop="@dimen/margin_top_small" />

            <!-- Save Group Button -->
            <Button
                android:id="@+id/btnSaveGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_save_group"
                android:layout_marginTop="@dimen/margin_top_medium" />

        </LinearLayout>
    </ScrollView>
</androidx.wear.widget.BoxInsetLayout>
